# =================================================================
# BACKEND ENVIRONMENT VARIABLES (Django)
# =================================================================
# Copy this file to Django/.env for local development
# For production, set these in your hosting platform (Railway/Render/etc.)

# =================================================================
# REQUIRED - Django Core Settings
# =================================================================

# Generate a new secret key for production:
# python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=django-insecure-CHANGE-THIS-IN-PRODUCTION

# Set to False in production
DEBUG=True

# Comma-separated list of allowed hosts
# Development: localhost,127.0.0.1
# Production: your-domain.railway.app,your-custom-domain.com
ALLOWED_HOSTS=localhost,127.0.0.1,testserver

# =================================================================
# DATABASE (Optional - defaults to SQLite)
# =================================================================

# For PostgreSQL (Railway/Render will auto-populate this)
# DATABASE_URL=postgresql://user:password@host:5432/database

# =================================================================
# CORS Settings (Frontend URLs)
# =================================================================

# Comma-separated list of allowed frontend origins
# Development: http://localhost:5173
# Production: https://your-frontend.vercel.app
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173

# =================================================================
# OPTIONAL - LLM API Keys (for AI features)
# =================================================================
# The system works without these (ML-only mode)
# Get FREE keys from:
# - Gemini: https://ai.google.dev/
# - OpenRouter: https://openrouter.ai/
# - Cohere: https://cohere.com/

GEMINI_API_KEY=
OPENROUTER_API_KEY=
GROQ_API_KEY=
COHERE_API_KEY=

# =================================================================
# OPTIONAL - Rasa Chatbot
# =================================================================

# Enable/disable Rasa integration
RASA_ENABLED=False

# Rasa server URL
RASA_SERVER_URL=http://localhost:5005

# Rasa timeout (seconds)
RASA_TIMEOUT=60

# Confidence threshold for Rasa predictions
RASA_CONFIDENCE_THRESHOLD=0.6

# =================================================================
# Notes:
# =================================================================
# 1. Never commit this file with real API keys to GitHub
# 2. In production, set these as environment variables in your hosting platform
# 3. Railway/Render will auto-generate DATABASE_URL when you add PostgreSQL
# 4. All LLM APIs are optional - system works without them
# 5. Generate SECRET_KEY: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
